<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Abu"
    tools:context=".ProfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/Putih">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil Akun"
            android:textSize="23dp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pengguna :"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/localTVNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rudi Hidayat"
                android:textSize="15dp"
                android:layout_marginLeft="150dp"/>
            <TextView
                android:layout_below="@id/localTVNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username :"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_below="@id/localTVNama"
                android:id="@+id/localTVUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rudihi"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp"/>
            <TextView
                android:layout_below="@id/localTVUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat :"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/localTVAlamat"
                android:layout_below="@id/localTVUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rudihi"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp"/>

            <Button
                android:id="@+id/buttonUpdateProfil"
                android:layout_below="@id/localTVAlamat"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/button_profil"
                android:text="Edit Profil"
                android:textColor="@color/Putih"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>
            <Button
                android:id="@+id/buttonUpdatePassword"
                android:layout_below="@id/buttonUpdateProfil"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/button_changepassword"
                android:text="Edit Password"
                android:textColor="@color/Putih"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>